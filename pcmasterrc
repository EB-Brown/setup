export BENCHMARK="/home/eb/Documents/personal_projects/benchmark"

export XDG_DATA_DIRS="$XDG_DATA_DIRS:/var/lib/flatpak/exports/share"
export XDG_DATA_DIRS="$XDG_DATA_DIRS:/home/eb/.local/share/flatpak/exports/share"
alias gwe="flatpak run com.leinardi.gwe"

export HEAVEN="$BENCHMARK/Unigine_Heaven-4.0"
alias heaven="cd $HEAVEN && bash heaven & cd $OLDPWD"

alias sysmon=gnome-system-monitor

alias set_overclock="gwe & heaven & sysmon & xdg-open $BENCHMARK"

